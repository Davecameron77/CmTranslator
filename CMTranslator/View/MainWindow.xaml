<Window x:Class="CMTranslator.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMTranslator.View"
        mc:Ignorable="d"
        Title="CM EC Translator" Height="1080" Width="1920" WindowState="Maximized">
    <Grid>
        <!--#region Grid Definitions-->
        <Grid.RowDefinitions>
            <!-- Menu Bar -->
            <RowDefinition Height="Auto" />
            <!-- Page Body -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!--#endregion-->
        
        <!--#region MenuBar-->
        <Menu Grid.Row="0"
              Grid.Column="0">
            <MenuItem Header="File">
                <MenuItem Header="Exit" />
            </MenuItem>
        </Menu>
        <!--#endregion-->
        
        <!--#region Page Body-->
        <TabControl Grid.Row="1"
                    Grid.Column="0"
                    ItemsSource="{Binding ActiveTabs, Mode=TwoWay}"
                    SelectedIndex="{Binding ActiveTabIndex, Mode=TwoWay}" />
        <!--#endregrion-->
    </Grid>
</Window>
